{
  "name": "invoice-api",
  "type": "module",
  "version": "1.0.0",
  "author": "ekrresa",
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|css|ts|tsx|md)\"",
    "email:dev": "email dev --dir src/emails/templates",
    "db:local": "turso dev --db-file .sqlocal/local.db --port 5683",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "prepare": "husky || true"
  },
  "engines": {
    "node": "^22.12.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.32.0",
    "@hono/node-server": "1.13.7",
    "@hono/zod-openapi": "0.18.3",
    "@libsql/client": "0.14.0",
    "@node-rs/argon2": "2.0.2",
    "@react-email/components": "0.0.32",
    "@scalar/hono-api-reference": "0.5.165",
    "date-fns": "4.1.0",
    "drizzle-orm": "0.38.3",
    "drizzle-zod": "0.6.1",
    "hono": "4.6.15",
    "hono-pino": "0.7.0",
    "nodemailer": "6.9.16",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "ulidx": "2.4.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@ianvs/prettier-plugin-sort-imports": "4.4.0",
    "@types/node": "22.10.5",
    "@types/nodemailer": "6.4.17",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "drizzle-kit": "0.30.1",
    "eslint": "9.17.0",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "prettier": "3.4.2",
    "react-email": "3.0.6",
    "tsc-alias": "1.8.10",
    "tsx": "4.7.1",
    "typescript": "5.7.2",
    "typescript-eslint": "8.19.0"
  }
}
